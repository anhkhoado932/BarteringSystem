<!DOCTYPE html>
<html lang="en">

<%- include("partials/header.ejs", {title: "Bartering System" }) %>

    <body>
        <div class="font2 bg" align="center">
            Welcome to the Bartering System
        </div>
        <div class="container">
            <%- include("partials/navbar") %>

                <!-- price filter -->
                <div class="my-4">
                    <form action="/item" method="GET">
                        <label for="priceRange">Filter by Price Range:</label>
                        <select name="priceRange" id="priceRange" onchange="this.form.submit()">
                            <option value="all" <% if(!priceRange || priceRange=='all' ) { %> selected <% } %>>All
                            </option>
                            <option value="0-100" <% if(priceRange=='0-100' ) { %> selected <% } %>>0-100</option>
                            <option value="100-300" <% if(priceRange=='100-300' ) { %> selected <% } %>>100-300</option>
                            <option value="300-500" <% if(priceRange=='300-500' ) { %> selected <% } %>>300-500</option>
                            <option value="500-1000" <% if(priceRange=='500-1000' ) { %> selected <% } %>>500-1000
                            </option>
                            <option value="gt1000" <% if(priceRange=='gt1000' ) { %> selected <% } %>>Above 1000
                            </option>
                        </select>
                    </form>
                </div>

                <div class="my-3">
                    <div class="row">
                        <% products.forEach(product=> { %>
                            <div class="col-md-4 mb-4">
                                <div class="card">
                                    <a href="/product-detail/<%= product._id %>">
                                        <img src="<%= product.imageUrl %>" class="card-img-top"
                                            alt="<%= product.name %>">
                                    </a>
                                    <div class="card-body">
                                        <h5 class="card-title">
                                            <a href="/product-detail/<%= product._id %>">
                                                <%= product.name %>
                                            </a>
                                        </h5>
                                        <p class="card-text">Price: <%= product.price %>
                                        </p>
                                        <p class="card-text">
                                            <%= product.details %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                            <% }); %>
                    </div>
                </div>


        </div>
        <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
            integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
            crossorigin="anonymous"></script>
        <script src="https://code.jquery.com/jquery-3.6.0.min.js"
            integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
        <script src="/js/script.js"></script>
        <script src="/js/navbar.js"></script>

    </body>
    <%- include("partials/footer.ejs") %>

</html>