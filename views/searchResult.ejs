<!DOCTYPE html>
<html lang="en">
    
<%- include("partials/header.ejs", {title: "Bartering System"}) %>

<body>
    <div class="font2 bg" align="center">
        Welcome to the Bartering System
    </div>
    <div class="container">
        <%- include("partials/navbar") %>

        <h1 class="my-5">Search Results</h1>

        <% if(products.length> 0) { %>
            <% products.forEach(product=> { %>
                <div>
                    <table class="table table-striped my-4">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Image</th>
                                <th>Price</th>
                                <th>Details</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <td>
                                    <%= product.name %>
                                </td>
                                <td><img src="<%= product.imageUrl %>" width="100"></td>
                                <td>
                                    <%= product.price %>
                                </td>
                                <td>
                                    <%= product.details %>
                                </td>
                                <td>
                                    <button class="btn btn-secondary cancel-btn"
                                        data-product-id="<%= product._id %>">Cancel</button>
                                </td>
                            </tr>

                </div>
                <% }); %>
                    <% } else { %>
                        <p>No products found.</p>
                        <% } %>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
        crossorigin="anonymous"></script>

</body>
<%- include("partials/footer.ejs") %>
</html>